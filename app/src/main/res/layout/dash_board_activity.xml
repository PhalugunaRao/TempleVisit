<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="16dp"
    android:orientation="vertical">
    <com.temples.custom.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/divider_test"
        android:layout_weight="1" />


    <LinearLayout
        android:id="@+id/divider_test"
        android:layout_width="match_parent"
        android:layout_height="0.02dp"
        android:background="@color/grey"
        android:orientation="horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/margin_55"
            android:layout_height="@dimen/margin_55"
            android:padding="@dimen/margin_10"
            android:src="@drawable/ic_home_page"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:elevation="0dp"
            app:tabIndicatorColor="@color/blue"
            app:tabMode="fixed" />

    </LinearLayout>









</LinearLayout>