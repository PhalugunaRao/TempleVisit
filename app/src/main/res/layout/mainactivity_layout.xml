<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary_family_member">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/textsize_20"
            android:gravity="center|left"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Phalguna Rao"/>
        <ImageView
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_25"
            android:layout_margin="@dimen/margin_5"
            android:background="@mipmap/ic_launcher"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:addStatesFromChildren="true"
            card_view:cardBackgroundColor="@color/white"
            android:clickable="true"
            card_view:cardCornerRadius="6dp"
            card_view:contentPadding="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_25"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/list_of_place_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/margin_70"
                        android:layout_height="@dimen/margin_70"
                        android:layout_margin="@dimen/margin_5"
                        android:background="@mipmap/ic_launcher"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/textsize_16"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textColor="@color/card_first"
                        android:text="List of Places"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_bookings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/margin_70"
                        android:layout_height="@dimen/margin_70"
                        android:layout_margin="@dimen/margin_5"
                        android:background="@mipmap/ic_launcher"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/textsize_16"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textColor="@color/card_first"
                        android:text="My Bookings"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_profiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/margin_70"
                        android:layout_height="@dimen/margin_70"
                        android:layout_margin="@dimen/margin_5"
                        android:background="@mipmap/ic_launcher"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/textsize_16"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textColor="@color/card_first"
                        android:text="My Profile"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/margin_70"
                        android:layout_height="@dimen/margin_70"
                        android:layout_margin="@dimen/margin_5"
                        android:background="@mipmap/ic_launcher"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/textsize_16"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textColor="@color/card_first"
                        android:text="Others"/>

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>