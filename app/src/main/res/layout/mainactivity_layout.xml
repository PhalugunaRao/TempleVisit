<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_all">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:padding="@dimen/margin_10"
        android:orientation="horizontal">
        <com.temples.utils.ProximaNovaTextView
            android:id="@+id/user_name_lable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/textsize_20"
            android:gravity="center|left"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Phalguna Rao"
            fab:typeface="proxima_regular"
            />
        <ImageView
            android:id="@+id/user_profile_icon"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_35"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/ic_user_profile"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|top">
        <com.temples.utils.ProximaNovaTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_20"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Explore"
            fab:typeface="proxima_regular"/>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_25"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_marginTop="@dimen/margin_20"
            android:addStatesFromChildren="true"
            card_view:cardBackgroundColor="@color/white"
            android:clickable="true"
            card_view:cardCornerRadius="6dp"
            card_view:contentPadding="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/margin_25"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_25"
                android:paddingBottom="@dimen/margin_25"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/list_of_place_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/margin_70"
                        android:layout_height="@dimen/margin_70"
                        android:layout_margin="@dimen/margin_5"
                        android:background="@drawable/ic_places_dash_board"/>
                    <com.temples.utils.ProximaNovaTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/textsize_14"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textColor="@color/card_first"
                        android:text="Temple Pass"
                        fab:typeface="proxima_bold"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_bookings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/margin_70"
                        android:layout_height="@dimen/margin_60"
                        android:layout_margin="@dimen/margin_5"
                        android:background="@drawable/ic_booking_dash_board"/>
                    <com.temples.utils.ProximaNovaTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/textsize_14"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textColor="@color/card_first"
                        android:text="My Bookings"
                        fab:typeface="proxima_bold"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_profiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/margin_70"
                        android:layout_height="@dimen/margin_60"
                        android:layout_margin="@dimen/margin_5"
                        android:background="@drawable/ic_profile_dash_board"/>
                    <com.temples.utils.ProximaNovaTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/textsize_14"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textColor="@color/card_first"
                        android:text="My Profile"
                        fab:typeface="proxima_bold"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/other_views"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/margin_70"
                        android:layout_height="@dimen/margin_60"
                        android:layout_margin="@dimen/margin_5"
                        android:background="@drawable/ic_other_dash_board"/>
                    <com.temples.utils.ProximaNovaTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/textsize_14"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textColor="@color/card_first"
                        android:text="Others"
                        fab:typeface="proxima_bold"/>

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>