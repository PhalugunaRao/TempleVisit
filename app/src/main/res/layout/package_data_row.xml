<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_12"
    android:addStatesFromChildren="true"
    card_view:cardBackgroundColor="@color/card_background_first"
    android:clickable="true"
    card_view:cardCornerRadius="3dp"
    card_view:contentPadding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:padding="@dimen/margin_16"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.temples.utils.ProximaNovaTextView
                android:id="@+id/package_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Visitors"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14"
                fab:typeface="proxima_regular"
                />
            <com.temples.utils.ProximaNovaTextView
                android:id="@+id/package_include_tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Visitors"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_10"
                fab:typeface="proxima_regular"
                />
        </LinearLayout>
        <com.temples.utils.ProximaNovaTextView
            android:id="@+id/package_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="Visitors"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16"
            fab:typeface="proxima_regular"
            />
        <ImageView
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_25"
            android:background="@drawable/white_arrow"/>

    </LinearLayout>


</android.support.v7.widget.CardView>