<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_250"
            android:background="@drawable/profile"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_16"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:padding="@dimen/margin_8"
                android:src="@drawable/ic_baseline_profile"/>
            <com.temples.utils.ProximaNovaTextView
                android:id="@+id/profile_name"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center|left"
                android:padding="@dimen/margin_12"
                android:textColor="@color/card_first"
                android:textSize="@dimen/textsize_18"
                app:typeface="proxima_regular"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_16"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:padding="@dimen/margin_8"
                android:src="@drawable/ic_call_new"/>
            <com.temples.utils.ProximaNovaTextView
                android:id="@+id/profile_mobile_number"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center|left"
                android:padding="@dimen/margin_12"
                android:textColor="@color/card_first"
                android:textSize="@dimen/textsize_18"
                app:typeface="proxima_regular"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_16"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:padding="@dimen/margin_8"
                android:src="@drawable/ic_baseline_mail_outline"/>
            <com.temples.utils.ProximaNovaTextView
                android:id="@+id/profile_email"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center|left"
                android:padding="@dimen/margin_12"
                android:textColor="@color/card_first"
                android:textSize="@dimen/textsize_18"
                app:typeface="proxima_regular"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_16"
            android:id="@+id/profile_logout_view"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:padding="@dimen/margin_8"
                android:src="@drawable/logo_out"/>
            <com.temples.utils.ProximaNovaTextView
                android:id="@+id/profile_logout"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center|left"
                android:text="Log Out"
                android:padding="@dimen/margin_12"
                android:textColor="@color/card_first"
                android:textSize="@dimen/textsize_18"
                app:typeface="proxima_regular"
                />

        </LinearLayout>

        <com.temples.utils.ProximaNovaTextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="V 1.0"
            android:padding="@dimen/margin_12"
            android:textColor="@color/card_first"
            android:textSize="@dimen/textsize_12"
            app:typeface="proxima_regular"
            />


    </LinearLayout>
</ScrollView>
