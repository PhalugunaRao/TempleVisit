<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8"
    android:addStatesFromChildren="true"
    card_view:cardBackgroundColor="@color/card_background_first"
    android:clickable="true"
    card_view:cardCornerRadius="6dp"
    card_view:contentPadding="0dp">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/place_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_200"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:padding="@dimen/margin_16"
            android:background="@drawable/gradient_bg_plce_list"
            android:orientation="vertical">
            <RatingBar
                android:id="@+id/place_rating"
                android:numStars="5"
                android:stepSize="1"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                android:progressTint="@color/progress_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.temples.utils.ProximaNovaTextView
                android:id="@+id/numer_of_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Visitors"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16"
                fab:typeface="proxima_bold"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="false"
            android:gravity="center|left"
            android:duplicateParentState="true"
            android:padding="@dimen/margin_16"
            android:background="@drawable/gradient_bg_plce_list"
            android:orientation="vertical">

            <com.temples.utils.ProximaNovaTextView
                android:id="@+id/place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Header"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_30"
                android:textStyle="bold"
                fab:typeface="proxima_bold"
                />


        </LinearLayout>




    </FrameLayout>


</android.support.v7.widget.CardView>