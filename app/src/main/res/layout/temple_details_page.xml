<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_150"
                    android:id="@+id/pager"
                    />
                <com.ravindu1024.indicatorlib.ViewPagerIndicator
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_30"
                    android:gravity="center_horizontal"
                    android:id="@+id/pager_indicator"
                    android:padding="@dimen/margin_10"
                    app:selectedColor="@color/colorPrimary"
                    app:deselectedColor="@color/white"
                    android:layout_gravity="bottom"
                    app:indicatorSpacing="@dimen/margin_5"
                    />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_22"
                android:textColor="@color/card_first"
                android:text="History"/>
            <TextView
                android:id="@+id/temple_detail_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/card_first"
                android:text="History"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_margin="@dimen/margin_16"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/temple_detail_rating"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="4"
                    style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                    android:progressTint="@color/progress_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/temple_detail_rating_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:maxLines="1"
                    android:text="124 Ratings"
                    android:textColor="@color/card_second"
                    android:textSize="@dimen/textsize_14"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/temple_detail_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="View More"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize_14"
                />
            <com.temples.utils.ExpandableHeightListView
                android:id="@+id/temple_details_packages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/row_item_for_list"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/margin_16"
                android:cacheColorHint="#00000000"
                android:divider="#FFF"
                android:dividerHeight="10dp"
                android:fillViewport="true" />


        </LinearLayout>
        
    </ScrollView>

</LinearLayout>