<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center|top"
    android:orientation="vertical">
    <com.temples.utils.ProximaNovaTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_100"
        android:gravity="center"
        android:text="Great Food"
        android:textColor="@color/card_main"
        android:textSize="@dimen/textsize_30"
        fab:typeface="proxima_bold"
        />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/margin_250"
        android:layout_height="@dimen/margin_250"
        android:layout_marginTop="@dimen/margin_50"
        android:src="@drawable/ic_walk_one" />



</LinearLayout>